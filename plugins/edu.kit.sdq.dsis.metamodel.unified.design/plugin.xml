<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <!-- ── Sirius Viewpoint Registration ─────────────────────────── -->
   <!--
     The path attribute must use the full plugin-prefixed path.
     Without the plugin ID prefix, Sirius cannot locate the odesign
     file in the installed (non-runtime) environment.
   -->
   <extension point="org.eclipse.sirius.componentization">
      <viewpoint
          path="/edu.kit.sdq.dsis.metamodel.unified.design/description/unified.odesign">
      </viewpoint>
   </extension>

